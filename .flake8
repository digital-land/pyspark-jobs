[flake8]
max-line-length = 180
ignore = E203, W503, E501
per-file-ignores =
    examples/*:F401,F821,F841,E501,E402
    *reconciliation*:F401,F821,F841,E501,E402,E226
    generate_*.py:F401,F821,F841,E501,E402
    tests/*:E402
exclude =
    __pycache__
    node_modules
    .venv
    pyspark-jobs-venv
    migrations
    .git
    old
    build
    dist
    .direnv